@model IEnumerable<Bachelorprosjekt.Models.Oppdragsgiver>

@{
    ViewData["Title"] = "Index";
}

<h1>Oppdragsgivere</h1>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Brukerkonto er aktiv?
            </th>
            @{/*
            <th>
                Antall levert
            </th>
            <th>
                Antall godkjent
            </th>*/
        }
        <th>
                Antall innmeldte
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AntInnmeldteProsjekt)
            </td>
            @{/*
            <th>
                Todo
            </th>
            <th>
                Todo
            </th>
            */}

            <td>
                <a class="rounded-link-small bg-blue-008AAF text-white nav-link" asp-action="Edit" asp-route-id="@item.Id">Endre brukerdata</a>
            </td>
        </tr>
}
    </tbody>
</table>
